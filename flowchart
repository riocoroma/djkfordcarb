           ┌─────────────┐
           │ Inizializza │
           │ dist[u]=∞   │
           │ dist[start]=0 │
           └─────┬───────┘
                 │
                 ▼
           ┌─────────────┐
           │ Inserisci   │
           │ start nell’heap │
           └─────┬───────┘
                 │
                 ▼
         ┌───────────────┐
         │ Finché heap ≠ ∅ │
         └─────┬─────────┘
                 │
                 ▼
         ┌───────────────┐
         │ Estrai nodo u │
         │ con dist min  │
         └─────┬─────────┘
                 │
                 ▼
      ┌─────────────────────┐
      │ Per ogni arco u→v, w│
      └─────────┬───────────┘
                │
      ┌─────────▼───────────┐
      │ dist[u]+w < dist[v]?│
      └─────┬──────────────┘
        sì │ no
            ▼
      ┌───────────────┐
      │ Aggiorna dist │
      │ dist[v]=dist[u]+w │
      │ prev[v]=u        │
      │ Inserisci v nell’heap │
      └─────┬───────────────┘
            │
      ┌─────▼─────────────┐
      │ count_relax[v] > V?│
      └─────┬─────────────┘
        sì │ no
            ▼
      ┌───────────────┐
      │ Rilevato ciclo │
      │ negativo → errore │
      └───────────────┘
